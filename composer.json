{
    "name": "simplesamlphp/simplesamlphp-module-authtwitter",
    "description": "A module that is able to perform authentication against Twitter",
    "type": "simplesamlphp-module",
    "keywords": ["simplesamlphp", "twitter"],
    "license": "LGPL-2.1-or-later",
    "authors": [
        {
            "name": "Tim van Dijen",
            "email": "tvdijen@gmail.com"
        }
    ],
    "config": {
        "preferred-install": {
            "simplesamlphp/simplesamlphp": "source",
            "*": "dist"
        },
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "simplesamlphp/composer-module-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "SimpleSAML\\Module\\authtwitter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimpleSAML\\Test\\Utils\\": "vendor/simplesamlphp/simplesamlphp/tests/Utils"
        }
    },
    "require": {
        "php": "^8.1",

        "league/oauth1-client": "^1.10",
        "simplesamlphp/assert": "^1.0",
        "simplesamlphp/simplesamlphp": "^2.1",
        "symfony/http-foundation": "^6.4"
    },
    "require-dev": {
        "simplesamlphp/simplesamlphp-test-framework": "^1.5"
    },
    "support": {
        "issues": "https://github.com/simplesamlphp/simplesamlphp-module-authtwitter/issues",
        "source": "https://github.com/simplesamlphp/simplesamlphp-module-authtwitter"
    }
}
